{{ 'flickity.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.pkgd.min.js' | asset_url }}" defer></script>

<div class="home-animation-slider section-{{ section.id }}" style="background-color: {{ section.settings.bg_color }}; margin-top: {{ section.settings.p_bottom }}em;">
    <div class="container">
        <div class="section-header">
            <h2>{{ section.settings.title }}</h2>
        </div>

        <div class="main-carousel" data-flickity='{ "cellAlign": "left", "contain": true, "freeScroll": true, "prevNextButtons": true, "pageDots": false }'>
            {% for block in section.blocks %}
                {% assign product = all_products[block.settings.product] %}
                <div class="carousel-cell product-card">
                    <a href="{{ block.settings.col_url | default: product.url }}">
                        <div class="product-image">
                            {% if block.settings.gif != blank %}
                                <img src="{{ block.settings.gif | img_url: 'master' }}" alt="{{ product.title }}">
                            {% elsif product.featured_image != blank %}
                                <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
                            {% endif %}
                        </div>
                        
                        <div class="product-info">
                            <span class="rating">‚≠ê {{ block.settings.review }}</span>
                            <h3>{{ product.title | default: "Product Title" }}</h3>
                            
                            {% unless section.settings.hideprice %}
                                <p class="price">{{ product.price | money }}</p>
                            {% endunless %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    .home-animation-slider { padding: 40px 0; }
    .section-header { text-align: left; margin-bottom: 30px; }
    .carousel-cell { width: 30%; margin-right: 20px; }
    .product-image img { width: 100%; height: auto; border-radius: 8px; }
    .product-info h3 { font-size: 16px; margin: 10px 0; color: #000; }
    .rating { font-size: 12px; color: #777; }
    
    @media screen and (max-width: 768px) {
        .carousel-cell { width: 70%; }
    }
</style>

{% schema %}
{
    "name": "Home Animation Section",
    "class": "design-product-section",
    "max_blocks": 8,
    "settings": [
        {
            "type": "checkbox",
            "id": "hide_image",
            "label": "Hide Empty Image",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "hideprice",
            "label": "Hide Price",
            "default": false
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Product Category"
        },
        {
            "type": "range",
            "id": "p-bottom",
            "label": "Margin Top",
            "min": 0,
            "step": 0.5,
            "max": 8,
            "unit": "em",
            "default": 1
        },
        {
            "type": "color",
            "id": "bg-color",
            "label": "Background Color",
            "default": "#ffffff"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Product Column",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Choose product"
                },
                {
                    "type": "text",
                    "id": "review",
                    "label": "Reviews",
                    "default": "4.8"
                },
                {
                     "type": "image_picker",
                     "id": "gif",
                     "label": "Custom Image/GIF"
                },
                {
                    "type": "url",
                    "id": "col_url",
                    "label": "Link Url Override"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Home Animation Section",
            "blocks": [
                 {"type": "image"},
                 {"type": "image"},
                 {"type": "image"}
            ]
        }
    ]
}
{% endschema %}