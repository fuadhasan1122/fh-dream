<footer class="site-footer" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container">
    <div class="footer-grid">
      {% for block in section.blocks %}
        <div class="footer-block column-{{ block.type }}" {{ block.shopify_attributes }}>
          
          {% case block.type %}
            {% when 'footer_info' %}
              <div class="footer-brand">
                {% if block.settings.footerlogo != blank %}
                  <img src="{{ block.settings.footerlogo | img_url: '300x' }}" alt="{{ block.settings.name }}" class="footer-logo">
                {% else %}
                  <h2 class="footer-logo-text">{{ shop.name }}</h2>
                {% endif %}
                <p class="footer-bio">{{ block.settings.bio_text }}</p>
                
                {% if block.settings.show_social %}
                  <div class="footer-social-icons">
                    {% if settings.social_facebook_link != blank %}<a href="{{ settings.social_facebook_link }}">FB</a>{% endif %}
                    {% if settings.social_instagram_link != blank %}<a href="{{ settings.social_instagram_link }}">IG</a>{% endif %}
                    {% if settings.social_twitter_link != blank %}<a href="{{ settings.social_twitter_link }}">TW</a>{% endif %}
                  </div>
                {% endif %}
              </div>

            {% when 'link_list' %}
              <h3 class="footer-title">{{ block.settings.heading }}</h3>
              <ul class="footer-links">
                {% for link in linklists[block.settings.menu].links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>

            {% when 'newsletter' %}
              <h3 class="footer-title">{{ block.settings.heading }}</h3>
              <p>{{ block.settings.subtext }}</p>
              {% form 'customer' %}
                <div class="footer-newsletter-form">
                  <input type="email" name="contact[email]" placeholder="email@example.com" required>
                  <button type="submit">Join</button>
                </div>
              {% endform %}
          {% endcase %}
          
        </div>
      {% endfor %}
    </div>

    <div class="footer-bottom">
      <div class="copyright">
        &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: routes.root_url }}
      </div>
      <div class="payment-methods">
        {{ shop.enabled_payment_types | payment_type_svg_tag: class: 'payment-icon' }}
      </div>
    </div>
  </div>
</footer>



<style>
  .site-footer {
    padding: 80px 0 30px;
    border-top: 1px solid rgba(0,0,0,0.08);
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr; /* Wide brand and newsletter columns */
    gap: 50px;
    margin-bottom: 60px;
  }
  .footer-title {
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 25px;
    letter-spacing: 1px;
  }
  .footer-logo { max-width: 180px; margin-bottom: 20px; }
  .footer-bio { line-height: 1.6; opacity: 0.8; margin-bottom: 20px; font-size: 14px; }
  
  .footer-links { list-style: none; padding: 0; margin: 0; }
  .footer-links li { margin-bottom: 12px; }
  .footer-links a { text-decoration: none; color: inherit; opacity: 0.7; transition: 0.3s; }
  .footer-links a:hover { opacity: 1; padding-left: 5px; }

  .footer-newsletter-form {
    display: flex;
    margin-top: 15px;
    border-bottom: 2px solid currentColor;
  }
  .footer-newsletter-form input {
    background: transparent;
    border: none;
    padding: 10px 0;
    flex-grow: 1;
    color: inherit;
  }
  .footer-newsletter-form button {
    background: transparent;
    border: none;
    color: inherit;
    font-weight: 700;
    cursor: pointer;
    text-transform: uppercase;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 30px;
    border-top: 1px solid rgba(0,0,0,0.05);
    font-size: 13px;
  }

  @media (max-width: 992px) {
    .footer-grid { grid-template-columns: 1fr 1fr; }
  }
  @media (max-width: 600px) {
    .footer-grid { grid-template-columns: 1fr; text-align: center; }
    .footer-newsletter-form { justify-content: center; }
  }
</style>

{% schema %}
{
  "name": "Professional Footer",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#f4f4f4" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#121212" }
  ],
  "blocks": [
    {
      "type": "footer_info",
      "name": "Brand Info",
      "limit": 1,
      "settings": [
        { "type": "image_picker", "id": "footerlogo", "label": "Logo" },
        { "type": "textarea", "id": "bio_text", "label": "Bio", "default": "Your brand story here." },
        { "type": "checkbox", "id": "show_social", "label": "Show Social Icons", "default": true }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Quick Links" },
        { "type": "link_list", "id": "menu", "label": "Choose Menu" }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Newsletter" },
        { "type": "text", "id": "subtext", "label": "Subtext", "default": "Get updates on new drops." }
      ]
    }
  ],
  "presets": [
    {
      "name": "Professional Footer",
      "blocks": [
        { "type": "footer_info" },
        { "type": "link_list" },
        { "type": "newsletter" }
      ]
    }
  ]
}
{% endschema %}