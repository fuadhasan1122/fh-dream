{% schema %}
{
  "name": "Custom Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Elevate Your Style"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Discover our latest collection of award-winning designs.</p>"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner"
    }
  ]
}
{% endschema %}


<div class="hero-banner-wrapper section-{{ section.id }}">
  <div class="hero-overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>

  <div class="container hero-container">
    <div class="hero-content-box" style="text-align: {{ section.settings.text_align }}; align-items: {% if section.settings.text_align == 'center' %}center{% elsif section.settings.text_align == 'right' %}flex-end{% else %}flex-start{% endif %};">
      
      {% if section.settings.title != blank %}
        <h1 class="hero-title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.content != blank %}
        <div class="hero-description">{{ section.settings.content }}</div>
      {% endif %}

      {% if section.settings.url != blank %}
        <a href="{{ section.settings.url }}" class="hero-btn">
          {{ section.settings.btn_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .hero-banner-wrapper {
    position: relative;
    height: 70vh; /* Slightly taller for more impact */
    min-height: 500px;
    background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-attachment: fixed; /* Parallax effect */
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-color: #000;
    z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .hero-content-box {
    display: flex;
    flex-direction: column;
    color: #ffffff;
    max-width: 700px;
    {% if section.settings.text_align == 'center' %}margin: 0 auto;{% endif %}
    {% if section.settings.text_align == 'right' %}margin-left: auto;{% endif %}
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem); /* Responsive font size */
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 20px 0;
    text-transform: uppercase;
    letter-spacing: -1px;
    /* Subtle text shadow for depth */
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
  }

  .hero-description p {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 0;
    font-weight: 400;
    opacity: 0.9;
  }

  .hero-btn {
    display: inline-block;
    margin-top: 35px;
    background: #cc4d0f;
    color: #fff;
    padding: 18px 45px;
    text-decoration: none;
    font-weight: 700;
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .hero-btn:hover {
    background: transparent;
    border-color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  /* Mobile Fixes */
  @media screen and (max-width: 768px) {
    .hero-banner-wrapper {
      height: 60vh;
      background-attachment: scroll; /* Fixed background bugs on mobile */
    }
    .hero-title { font-size: 2rem; }
  }
</style>